---
import MetaTags, { type MetaProps } from "./MetaTags.astro";

// props
export interface Props {
  meta: MetaProps;
}

const { meta } = Astro.props;
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth 2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>
  <body
    class="antialiased text-gray-900 dark:text-slate-300 tracking-tight bg-white dark:bg-slate-950"
  >
    <slot />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
